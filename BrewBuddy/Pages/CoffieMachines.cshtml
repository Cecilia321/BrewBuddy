@model CoffieMachinesModel

<h1>Kaffemaskiner</h1>

<!-- Vis eksisterende kaffemaskiner -->
<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Maskine ID</th>
            <th scope="col">Navn</th>
            <th scope="col">Lokation</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var machine in Model.coffieMachines)
        {
            <tr>
                <td>@machine.MachineId</td>
                <td>@machine.Name</td>
                <td>@machine.Location</td>
            </tr>
            @* <td>
            <form method="post" asp-page-handler="Update">
                <input type="hidden" asp-for="@machine.MachineId" name="UpdatedMachine.MachineId" value="@machine.MachineId" />
                <input type="text" asp-for="UpdatedMachine.Name" name="UpdatedMachine.Name" placeholder="New Name" value="@machine.Name" />
                <input type="text" asp-for="UpdatedMachine.Location" name="UpdatedMachine.Location" placeholder="New Location" value="@machine.Location" />
                <button type="submit" class="btn btn-primary btn-sm">Update</button>
            </form>
            </td> *@
        <td>
            <form method="post" asp-page-handler="Delete">
                <input type="hidden" name="machineId" value="@machine.MachineId" />
                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
            </form>
        </td>
        <td>
            <!-- Update form -->
            <form method="post" asp-page-handler="SelectForUpdate">
                <input type="hidden" name="MachineId" value="@machine.MachineId" />
                <button type="submit" class="btn btn-primary btn-sm">Update</button>
            </form>
                @if (Model.UpdatedMachine?.MachineId > 0)
                {
                <form method="post" asp-page-handler="Update">
                    <input type="hidden" name="UpdatedMachine.MachineId" value="@Model.UpdatedMachine.MachineId" />
                    <div>
                        <label for="UpdatedName">Navn</label>
                        <input type="text" id="UpdatedName" name="UpdatedMachine.Name" value="@Model.UpdatedMachine.Name" required />
                    </div>
                    <div>
                        <label for="UpdatedLocation">Lokation</label>
                        <input type="text" id="UpdatedLocation" name="UpdatedMachine.Location" value="@Model.UpdatedMachine.Location" required />
                    </div>
                    <button type="submit" class="btn btn-primary">Gem Opdatering</button>
                </form>
                }
        </td>
        }
    </tbody>
</table>

<hr />

<h2>Tilføj Ny Kaffemaskine</h2>
<form method="post">
    <div>
        <label for="Name">Navn</label>
        <input type="text" id="Name" name="NewMachine.Name" required />
    </div>
    <div>
        <label for="Location">Lokation</label>
        <input type="text" id="Location" name="NewMachine.Location" required />
    </div>
    <button type="submit">Tilføj</button>
</form>

