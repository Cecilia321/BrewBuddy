@page "{Id:int?}"
@model BrewBuddy.Pages.UserFolder.UpdateUserModel

@{
    ViewData["Title"] = "Update";
}

<hr class="my-5" />
<h2 class="mb-4 text-center"><strong>Redigering af bruger</strong></h2>

<form method="post" class="mx-auto" style="max-width: 600px;">
    <input type="hidden" name="UpdateUser.UserId" value="@Model.UpdateUser.UserId" />
    @* Fornavn *@
    <div class="mb-3">
        <label for="FirstName" class="form-label">Fornavn</label>
        <input type="text" id="FirstName" name="UpdateUser.FirstName" class="form-control" 
               minlength="1" maxlength="50" required placeholder="Indtast fornavn" 
               value="@Model.UpdateUser.FirstName" />
        <small class="form-text text-muted">Fornavnet skal være mellem 1 og 50 tegn.</small>
    </div>

    @* Efternavn *@
    <div class="mb-3">
        <label for="LastName" class="form-label">Efternavn</label>
        <input type="text" id="LastName" name="UpdateUser.LastName" class="form-control" 
               minlength="2" maxlength="50" required placeholder="Indtast efternavn" 
               value="@Model.UpdateUser.LastName" />
        <small class="form-text text-muted">Efternavnet skal være mellem 2 og 50 tegn.</small>
    </div>

   @*  Telefon nummer *@
    <div class="mb-3">
        <label for="PhoneNumber" class="form-label">Telefonnummer</label>
        <div class="input-group">
            <span class="input-group-text">+45</span>
            <input type="text" id="PhoneNumber" name="UpdateUser.PhoneNumber" class="form-control" 
                   placeholder="12345678" required value="@Model.UpdateUser.PhoneNumber" />
        </div>
    </div>  

    @* Rolle *@
    <div class="mb-3">
        <label for="Role" class="form-label">rolle</label>
        <div class="input-group">
            <input type="text" id="Role" name="UpdateUser.Role" class="form-control"
                   placeholder="Stilling" required value="@Model.UpdateUser.Role" />
        </div>
    </div>

    @* Fødselsdato *@
    <div class="mb-3">
        <label for="BirthDate" class="form-label">Fødselsdagsdato</label>
        <input type="date" id="BirthDate" name="UpdateUser.BirthDate" class="form-control"
               required max="@DateTime.Now.ToString("yyyy-MM-dd")"
               value="@Model.UpdateUser.BirthDate.ToString("yyyy-MM-dd")" />
        <small class="form-text text-muted">Fødselsdatoen skal være før dags dato.</small>
    </div>

    @* Email  *@
    <div class="mb-3">
        <label for="Email" class="form-label">Email</label>
        <input type="email" id="Email" name="UpdateUser.Email" class="form-control"
               required placeholder="Indtast email" value="@Model.UpdateUser.Email" />
        <small class="form-text text-muted">Indtast en gyldig emailadresse.</small>
    </div>

    @* Adgangskode *@
    <div class="mb-3">
        <label for="Password" class="form-label">kode</label>
        <div class="input-group">
            <input type="text" id="Password" name="UpdateUser.Password" class="form-control"
                   placeholder="Stilling" required value="@Model.UpdateUser.Password" />
        </div>
    </div> 

    <button type="submit" class="btn btn-primary w-100">Gem</button>
</form>
