@page
@model AssignmentsModel
@{
    ViewData["Title"] = "Opgaver";
}

<h1>Opgaver grupperet efter maskine</h1>

<!-- Vis ufuldstændige opgaver, hvis de findes -->
@if (Model.IncompleteAssignments != null && Model.IncompleteAssignments.Any())
{
    @foreach (var dateGroup in Model.IncompleteAssignments.GroupBy(a => a.DailyDate))
    {
        <h2>Dato: @dateGroup.Key?.ToString("dd-MM-yyyy")</h2> <!-- DailyDate vises én gang pr. dato -->
        @foreach (var machineGroup in dateGroup.GroupBy(a => a.MachineId))
        {
            <h3>Maskine ID: @machineGroup.Key</h3>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Task</th>
                        <th>Interval</th>
                        <th>Description</th>
                        <th>User</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var assignment in machineGroup)
                    {
                        <tr>
                            <td>@assignment.Type</td>
                            <td>@assignment.IntervalType</td>
                            <td>@assignment.Description</td>
                            <td>@assignment.User?.FirstName</td>
                            <td>
                                <!-- Form til at markere opgaven som fuldført -->
                                @if (!assignment.IsComplete)
                                {
                                    <form method="post" asp-page-handler="Complete">
                                        <input type="hidden" name="AssignmentId" value="@assignment.AssignmentId" />
                                        <label for="Amount-@assignment.AssignmentId">Amount:</label>
                                        <input type="number" id="Amount-@assignment.AssignmentId" name="Amount" value="@assignment.Amount" />
                                        <button type="submit" class="btn btn-primary">Mark Complete</button>
                                    </form>
                                }
                                else
                                {
                                    <span class="text-success">Completed</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    }
}
else
{
    <p>Der er endnu ikke oprettet nogen ufuldstændige opgaver.</p>
}

<h2>Dagens løste opgaver</h2>
@if (Model.TodaysCompletedAssignments != null && Model.TodaysCompletedAssignments.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Task</th>
                <th>Amount</th>
                <th>Date Completed</th>
                <th>User</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var assignment in Model.TodaysCompletedAssignments)
            {
                <tr>
                    <td>@assignment.Type</td>
                    <td>@assignment.Amount</td>
                    <td>@assignment.FinishedDateAndTime?.ToString("g")</td>
                    <td>@assignment.UserId</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Der er ingen løste opgaver i dag.</p>
}

<h2>Gårdagens løste opgaver</h2>
@if (Model.YesterdaysCompletedAssignments != null && Model.YesterdaysCompletedAssignments.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Task</th>
                <th>Date Completed</th>
                <th>User</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var assignment in Model.YesterdaysCompletedAssignments)
            {
                <tr>
                    <td>@assignment.Type</td>
                    <td>@assignment.FinishedDateAndTime?.ToString("g")</td>
                    <td>@assignment.User?.FirstName</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Der er ingen løste opgaver fra i går.</p>
}

