@page
@model BrewBuddy.Pages.UsersModel
@{
}

<h1>Brugere</h1>

<!-- Vis eksisterende users -->
<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">User Id</th>
            <th scope="col">Navn</th>
            <th scope="col">EfterNavn</th>
            <th scope="col">tlf</th>
            <th scope="col">Rolle</th>
            <th scope="col">Fødseldag</th>
            <th scope="col">Registrerings dato</th>
            <th scope="col">Email</th>
            <th scope="col">Handler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.users)
        {
            <tr>
                <td>@user.UserId</td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.PhoneNumber</td>
                <td>@user.Role</td>
                <td>@user.BirthDate</td>
                <td>@user.RegistrationDate</td>
                <td>@user.Email</td>
                <td>
                    <form method="post" asp-page-handler="Delete">
                        <input type="hidden" name="userId" value="@user.UserId" />
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </td>
                <td>
                <!-- Opdater-knap -->
                <form method="get" asp-page="Edit" asp-route-id="@user.UserId" class="d-inline">
                    <button type="submit" class="btn btn-primary btn-sm me-2">Opdater</button>
                </form>
                </td>
            </tr>
        
        }
    </tbody>
</table>

<hr />

<form method="post" class="mx-auto" style="max-width: 600px;">
    <div class="mb-3">
        <label for="FirstName" class="form-label">Navn</label>
        <input type="text" id="FirstName" name="NewUser.FirstName" class="form-control" required />
    </div>
    <div class="mb-3">
        <label for="LastName" class="form-label">Efternavn</label>
        <input type="text" id="LastName" name="NewUser.LastName" class="form-control" required />
    </div>
    <div class="mb-3">
        <label for="PhoneNumber" class="form-label">Telefonnummer</label>
        <input type="text" id="PhoneNumber" name="NewUser.PhoneNumber" class="form-control" required />
    </div>
    <div class="mb-3">
        <label for="Role" class="form-label">Rolle</label>
        <input type="text" id="Role" name="NewUser.Role" class="form-control" required />
    </div>
    <div class="mb-3">
        <label for="BirthDate" class="form-label">Fødselsdagsdato</label>
        <input type="date" id="BirthDate" name="NewUser.BirthDate" class="form-control" required />
    </div>
    <div class="mb-3">
        <label for="Email" class="form-label">Email</label>
        <input type="email" id="Email" name="NewUser.Email" class="form-control" required />
    </div>
    <div class="mb-3">
        <label for="Password" class="form-label">Kode</label>
        <input type="password" id="Password" name="NewUser.Password" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary w-100">Tilføj</button>
</form>
</div>

