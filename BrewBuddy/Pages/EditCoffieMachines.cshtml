@page
@model BrewBuddy.Pages.EditCoffieMachinesModel
@{
    ViewData["Title"] = "Rediger Kaffemaskiner";
}

<h1>Rediger Kaffemaskiner</h1>

<h2>Opret ny maskine</h2>
<form method="post">
    <input type="text" asp-for="NewMachine.Name" placeholder="Navn" required />
    <button type="submit" formaction="/EditCoffieMachines?handler=Add">Tilføj</button>
</form>

<h2>Eksisterende maskiner</h2>
@foreach (var machine in Model.coffieMachines)
{
    <div>
        <form method="post">
            <input type="hidden" name="MachineId" value="@machine.MachineId" />
            <input type="text" name="Name" value="@machine.Name" required />
            <button type="submit" formaction="/EditCoffieMachines?handler=Update">Opdater</button>
            <button type="submit" formaction="/EditCoffieMachines?handler=Delete">Slet</button>
        </form>
    </div>
}
